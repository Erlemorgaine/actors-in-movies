<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Watched movies", movies_path, class: "sidebar-link active" %></li>
      <li class="sidebar-item"><%= link_to "Movies to watch", movies_path, class: "sidebar-link" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-primary">
      <div class="panel-heading">
        Movies to watch
      </div>
      <div class="panel-body">

        <% @movies.each do |movie| %>
        <div class="row">
          <div class="col-md-7">
            <h4><%= movie.name %></h4>
          </div>
          <div class="col-md-3 right">
            <%= link_to "View", movie, class: "btn btn-default" %>
            <%= link_to "Update", edit_movie_path(movie), class: "btn btn-default" %>
          </div>
        </div>
        <% end %>

      </div>
    </div>

    <%= link_to "Add new movie", new_movie_path, class: "btn btn-primary" %>
  </div>
</div>
